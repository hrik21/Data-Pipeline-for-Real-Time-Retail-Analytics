# Environment configuration template
# Copy this file to .env and update values for your environment

# General settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# PostgreSQL settings
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# Redis settings
REDIS_HOST=redis
REDIS_PORT=6379

# Airflow settings
AIRFLOW_UID=50000
AIRFLOW_GID=0
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_EMAIL=admin@example.com
AIRFLOW_ADMIN_FIRSTNAME=Admin
AIRFLOW_ADMIN_LASTNAME=User
AIRFLOW_FERNET_KEY=your-fernet-key-here
AIRFLOW_WEBSERVER_SECRET_KEY=your-secret-key-here

# Database URLs (for production)
AIRFLOW_DATABASE_URL=postgresql+psycopg2://airflow:airflow@postgres/airflow
AIRFLOW_CELERY_BROKER_URL=redis://:@redis:6379/0

# dbt settings
DBT_TARGET=dev
DBT_SNOWFLAKE_ACCOUNT=your-account
DBT_SNOWFLAKE_USER=your-user
DBT_SNOWFLAKE_PASSWORD=your-password
DBT_SNOWFLAKE_WAREHOUSE=your-warehouse
DBT_SNOWFLAKE_DATABASE=your-database
DBT_SNOWFLAKE_SCHEMA=your-schema

# Snowflake connection settings
SNOWFLAKE_ACCOUNT=your-account
SNOWFLAKE_USER=your-user
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_WAREHOUSE=your-warehouse
SNOWFLAKE_DATABASE=your-database
SNOWFLAKE_SCHEMA=your-schema

# Monitoring settings
MONITORING_PORT=9090
METRICS_ENABLED=true
ALERTING_ENABLED=true